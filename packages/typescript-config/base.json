{
    "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "incremental": false,
      "isolatedModules": true,
      "lib": ["es2022", "DOM", "DOM.Iterable"],
      "module": "esnext",
      "moduleDetection": "force",
      "moduleResolution": "Bundler",
      "noUncheckedIndexedAccess": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "ES2022"
    }
}
  